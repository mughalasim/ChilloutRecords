<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/no_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:alpha="0.8"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_sad_face" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                style="@style/Header_Text"
                android:text="No reviews" />

            <TextView
                style="@style/Text_Normal"
                android:text="Be the first to review this restaurant" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_display_name"
                style="@style/Text_Normal"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:text="Muhammed Iqbal" />

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/rating_bar_height"
                android:minHeight="@dimen/rating_bar_height"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/text_size_normal_margin"
                android:layout_marginStart="@dimen/text_size_normal_margin"
                android:isIndicator="true"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_yellow"
                android:stepSize="0.2" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_thumbnail"
            android:layout_width="@dimen/restaurant_review_image_size"
            android:layout_height="@dimen/restaurant_review_image_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/review_text"
            style="@style/Text_Normal"
            android:layout_below="@+id/user_thumbnail"
            android:layout_margin="0dp"
            android:gravity="start" />

    </RelativeLayout>

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>