<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/padding_medium">

                        <!--IMAGE-->
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/user_thumbnail"
                            android:layout_width="@dimen/img_size_medium_large"
                            android:layout_height="@dimen/img_size_medium_large"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/padding_medium"
                            android:layout_marginRight="@dimen/padding_medium"
                            android:scaleType="centerCrop"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="8dp"
                            app:riv_mutate_background="true" />


                        <LinearLayout
                            android:layout_width="@dimen/img_size_medium_large"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/user_thumbnail"
                            android:layout_toRightOf="@+id/user_thumbnail"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/picture_add"
                                style="@style/ButtonNo"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_medium"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/picture_delete"
                                style="@style/ButtonNo"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/padding_medium"
                                android:textSize="@dimen/text_size_small" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/padding_medium"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextBody"
                                    android:textSize="@dimen/text_size_small" />

                                <TextView
                                    android:id="@+id/user_points"
                                    style="@style/Text_Header"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>

                    <TextView
                        style="@style/TextBody"
                        android:text="Your Account details" />

                    <EditText
                        android:id="@+id/register_first_name"
                        style="@style/EditText"
                        android:hint="@string/et_hint_first_name"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/register_last_name"
                        style="@style/EditText"
                        android:hint="@string/et_hint_last_name"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/register_email"
                        style="@style/EditText"
                        android:hint="@string/et_hint_email"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/register_phone"
                        style="@style/EditText"
                        android:hint="@string/et_hint_phone"
                        android:inputType="phone" />

                    <TextView
                        android:id="@+id/register_dob"
                        style="@style/EditText"
                        android:hint="@string/et_hint_dob" />


                    <TextView
                        style="@style/ButtonNo"
                        android:onClick="UpdateDetails"
                        android:text="UPDATE" />


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/navigation_view" />

</androidx.drawerlayout.widget.DrawerLayout>
