<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_no_results"
        style="@style/TextTitle"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_list_item"
        style="@style/CardLayout"
        android:layout_marginTop="@dimen/padding_medium"
        android:onClick="openArtists"
        android:padding="@dimen/padding_large">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_size_x_large"
                android:scaleType="centerCrop"
                android:src="@drawable/home_artists"
                app:riv_corner_radius="@dimen/radius_corner" />

            <TextView
                android:id="@+id/txt"
                style="@style/TextTitle"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/padding_large"
                android:elevation="@dimen/text_margin"
                android:text="@string/nav_artists"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>