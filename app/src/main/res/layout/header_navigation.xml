<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bckgrd_card"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/username"
            style="@style/TextBody"
            android:layout_margin="0dp"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="Asim Mughal" />

        <TextView
            android:id="@+id/userEmail"
            style="@style/TextSmall"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="asimkenya@gmail.com"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/userPic"
        android:layout_width="@dimen/img_size_normal"
        android:layout_height="@dimen/img_size_normal"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_medium"
        android:src="@color/colorPrimaryDark"
        app:riv_border_color="@color/colorAccent"
        app:riv_border_width="1dp"
        app:riv_corner_radius="5dp" />

</RelativeLayout>
