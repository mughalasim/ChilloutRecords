<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/bckgrd_activity_panels"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_padding">

        <TextView
            android:id="@+id/username"
            style="@style/Text_Normal"
            android:layout_margin="0dp"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="Asim Mughal"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/userEmail"
            style="@style/Text_Tiny"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="asimkenya@gmail.com"
            android:textColor="@color/white" />

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/userPic"
        android:layout_width="@dimen/nav_header_pic_height"
        android:layout_height="@dimen/nav_header_pic_height"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_padding"
        android:src="@color/black"
        app:riv_border_color="@color/white"
        app:riv_border_width="1dp"
        app:riv_corner_radius="50dp" />

</RelativeLayout>
