<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardLayout"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextTitle"
                android:text="Earn points" />

            <TextView
                style="@style/TextBody"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:text="Earn points by watching a small ad. \n\nYou can use these points to watch, play and download content from the app absolutely free" />

            <TextView
                android:id="@+id/txt_points"
                style="@style/TextTitle"
                android:text="5" />

            <TextView
                style="@style/TextBody"
                android:layout_marginBottom="@dimen/padding_large"
                android:text="@string/nav_points" />

            <TextView
                android:id="@+id/txt_message"
                style="@style/TextBody"
                android:gravity="center"
                android:padding="@dimen/padding_mini"
                android:background="@drawable/bckgrd_card"
                android:layout_marginBottom="@dimen/padding_large"
                android:text="5 hours and 23 Mins to the next available ad" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_watch"
                style="@style/ButtonYes"
                android:layout_marginBottom="@dimen/padding_large"
                android:text="Watch now" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>



