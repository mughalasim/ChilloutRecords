<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <include layout="@layout/header_collapsing_details_layout" />

            <include layout="@layout/toolbar" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/main_nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LL_gallery_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gallery_recycler_large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scrollbarSize="4dp"
                    android:scrollbarThumbVertical="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/restaurant_details_bottom_toolbar_height"
                android:visibility="gone">

                <TextView
                    android:id="@+id/display_paybill"
                    style="@style/Button_green"
                    android:layout_marginTop="10dp"
                    android:onClick="PAY_BILL"
                    android:text="@string/txt_pay_bill"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/LL_offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/bckgrd_text_fields"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_bold_left"
                        android:text="@string/txt_restaurant_description" />

                    <TextView
                        android:id="@+id/description"
                        style="@style/text_left" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/bckgrd_text_fields"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/text_bold_left"
                        android:text="@string/txt_operating_hours" />

                    <RelativeLayout
                        android:id="@+id/llday1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_mon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day1open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day1close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llday2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_tue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day2open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day2close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llday3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_wed" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day3open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day3close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llday4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_thu" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day4open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day4close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llday5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_fri" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day5open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day5close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llday6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_sat" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day6open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day6close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/llday7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/restaurant_details_working_hrs_text">

                        <TextView
                            style="@style/text_left"
                            android:text="@string/txt_sun" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/day7open"
                                style="@style/text_left" />

                            <TextView
                                style="@style/text_left"
                                android:text="@string/txt_to" />

                            <TextView
                                android:id="@+id/day7close"
                                style="@style/text_left" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/bckgrd_text_fields"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_bold_left"
                        android:text="@string/txt_photo_gallery" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/gallery_recycler_small"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/restaurant_details_gallery_small"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:scrollbarSize="2dp"
                        android:scrollbarThumbVertical="@color/colorAccent"
                        android:scrollbars="horizontal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/restaurant_details_bottom_toolbar_height"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/swiperefresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/review_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:scrollbarSize="3dp"
                            android:scrollbarThumbVertical="@color/colorAccent"
                            android:scrollbars="vertical" />

                    </android.support.v4.widget.SwipeRefreshLayout>

                    <LinearLayout
                        android:id="@+id/btn_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="-40dp"
                        android:background="@color/green"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            style="@style/Text_Normal"
                            android:text="@string/txt_review_and_win"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:alpha="0.7"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/Text_Normal"
                    android:text="@string/txt_loading_restaurant_info" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_no_wifi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text_Normal"
                        android:text="@string/txt_error_connecting" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Button_No"
                            android:layout_weight="1"
                            android:onClick="BTN_Back"
                            android:text="@string/txt_back" />

                        <TextView
                            style="@style/Button_Yes"
                            android:layout_weight="1"
                            android:onClick="BTN_Retry"
                            android:text="@string/txt_retry" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_other_offers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/Text_Normal"
                    android:text="Oops! Seems like this restaurant doesn't have any offers, why not try out these nearby restaurants" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="?actionBarSize"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/restaurant_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:scrollbarSize="8dp"
                        android:scrollbarThumbVertical="@color/colorAccent"
                        android:scrollbars="vertical" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/TB_Layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/restaurant_details_bottom_toolbar_height"
        android:layout_gravity="bottom"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/TB_BTN_Info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/restaurant_details_bottom_toolbar_margin"
                android:padding="@dimen/restaurant_details_bottom_toolbar_padding"
                android:scaleType="centerInside"
                android:src="@drawable/restaurant_details_info" />

            <TextView
                style="@style/Text_Tiny"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/txt_info"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TB_BTN_PDF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dim">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/restaurant_details_bottom_toolbar_margin"
                android:padding="@dimen/restaurant_details_bottom_toolbar_padding"
                android:scaleType="centerInside"
                android:src="@drawable/restaurant_details_pdf" />

            <TextView
                style="@style/Text_Tiny"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/txt_menu"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TB_BTN_Map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dim">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/restaurant_details_bottom_toolbar_margin"
                android:padding="@dimen/restaurant_details_bottom_toolbar_padding"
                android:scaleType="centerInside"
                android:src="@drawable/restaurant_details_maps" />

            <TextView
                style="@style/Text_Tiny"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/txt_map"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TB_BTN_Reviews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dim">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/restaurant_details_bottom_toolbar_margin"
                android:padding="@dimen/restaurant_details_bottom_toolbar_padding"
                android:scaleType="centerInside"
                android:src="@drawable/restaurant_details_reviews" />

            <TextView
                style="@style/Text_Tiny"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/txt_reviews"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TB_BTN_Share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dim">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/restaurant_details_bottom_toolbar_margin"
                android:padding="@dimen/restaurant_details_bottom_toolbar_padding"
                android:scaleType="centerInside"
                android:src="@drawable/restaurant_details_share" />

            <TextView
                style="@style/Text_Tiny"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/txt_share"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/restaurant_details_bottom_toolbar_height"
        android:visibility="gone">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/activity_splash_screen" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_pdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/restaurant_details_bottom_toolbar_height"
        android:visibility="gone">

        <WebView
            android:id="@+id/pdf_menu_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="false">

        </WebView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>