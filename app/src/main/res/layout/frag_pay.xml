<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardLayout"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextTitle"
                android:text="Upgrade" />

            <TextView
                android:id="@+id/txt_message"
                style="@style/TextBody"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:text="Upgrade your account ONLY ONCE inorder to get free download access to all music and video content" />


            <TextView
                style="@style/TextTitle"
                android:text="$5" />


            <TextView
                style="@style/TextBody"
                android:text="(One time fee)" />

            <TextView
                style="@style/TextBody"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_small"
                android:text="Payment options" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pay_google"
                style="@style/ButtonYes"
                android:textAllCaps="false"
                android:text="Google Pay" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pay_visa"
                style="@style/ButtonYes"
                android:textAllCaps="false"
                android:text="Visa Debit" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>



