<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardLayout"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextTitle"
                android:text="@string/nav_share" />

            <TextView
                android:id="@+id/txt_message"
                style="@style/TextBody"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:text="@string/txt_share" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share_facebook"
                    android:layout_width="@dimen/img_size_normal"
                    android:layout_height="@dimen/img_size_normal"
                    android:layout_marginEnd="@dimen/padding_large"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_share_facebook" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share_whatsapp"
                    android:layout_width="@dimen/img_size_normal"
                    android:layout_height="@dimen/img_size_normal"
                    android:layout_marginEnd="@dimen/padding_large"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_share_whatsapp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share_email"
                    android:layout_width="@dimen/img_size_normal"
                    android:layout_height="@dimen/img_size_normal"
                    android:layout_marginEnd="@dimen/padding_large"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_share_email" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share_instagram"
                    android:layout_width="@dimen/img_size_normal"
                    android:layout_height="@dimen/img_size_normal"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_share_instagram" />


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>



