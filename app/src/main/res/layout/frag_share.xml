<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardLayout"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                style="@style/TextTitle"
                android:text="@string/nav_share" />

            <TextView
                android:id="@+id/txt_message"
                style="@style/TextBody"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:text="@string/txt_share" />

            <TextView
                android:id="@+id/txt_link"
                style="@style/TextBody"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccentHighlight"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:textIsSelectable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share_link"
                style="@style/ButtonYes"
                android:text="@string/txt_share_link" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>



