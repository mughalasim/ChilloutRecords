<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_large"
                    android:backgroundTint="@color/grey_dark"
                    android:elevation="@dimen/text_margin"
                    android:onClick="ShareProfile"
                    android:src="@drawable/ic_share"
                    app:elevation="@dimen/text_margin" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/padding_large"
                    android:backgroundTint="@color/grey_dark"
                    android:elevation="@dimen/text_margin"
                    android:src="@drawable/ic_edit"
                    app:elevation="@dimen/text_margin"
                    tools:ignore="RelativeOverlap" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/img_size_x_large"
                    android:layout_height="@dimen/img_size_x_large"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/padding_large"
                    android:padding="@dimen/line_thickness"
                    android:src="@color/grey_dark"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="@dimen/line_thickness"
                    app:riv_corner_radius="@dimen/img_size_x_large" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_edit_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_profile"
                    android:layout_marginStart="-40dp"
                    android:layout_marginTop="-40dp"
                    android:layout_toEndOf="@id/img_profile"
                    android:backgroundTint="@color/grey_dark"
                    android:elevation="@dimen/text_margin"
                    android:src="@drawable/ic_camera"
                    app:elevation="@dimen/text_margin" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                style="@style/CardLayout"
                android:layout_marginTop="@dimen/padding_large">

                <LinearLayout
                    android:layout_width="@dimen/screen_min_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/TextTitle" />

                    <TextView
                        android:id="@+id/txt_stage_name"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin" />

                    <TextView
                        android:id="@+id/txt_email"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin" />

                    <TextView
                        android:id="@+id/txt_gender"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin" />

                    <TextView
                        android:id="@+id/txt_member_since"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin" />

                    <TextView
                        android:id="@+id/txt_profile_visits"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_width="@dimen/screen_min_width"
                style="@style/TabTextLayout" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="600dp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

</RelativeLayout>