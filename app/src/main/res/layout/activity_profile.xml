<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_tool_bar"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="@dimen/text_margin"
                    android:layout_margin="@dimen/padding_large"
                    android:backgroundTint="@color/grey_dark"
                    android:elevation="@dimen/text_margin"
                    android:onClick="ShareProfile"
                    android:src="@drawable/ic_share" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="@dimen/text_margin"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/padding_large"
                    android:backgroundTint="@color/grey_dark"
                    android:elevation="@dimen/text_margin"
                    android:src="@drawable/ic_edit"
                    tools:ignore="RelativeOverlap" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_profile"
                    android:layout_marginTop="@dimen/padding_large"
                    android:layout_width="@dimen/img_size_x_large"
                    android:layout_height="@dimen/img_size_x_large"
                    android:layout_centerInParent="true"
                    android:background="@color/grey_dark"
                    android:padding="@dimen/line_thickness"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="@dimen/line_thickness"
                    app:riv_corner_radius="@dimen/img_size_x_large"
                    app:riv_mutate_background="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_edit_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey_dark"
                    android:elevation="@dimen/text_margin"
                    android:layout_below="@+id/img_profile"
                    android:layout_marginTop="-40dp"
                    app:elevation="@dimen/text_margin"
                    android:layout_marginStart="-40dp"
                    android:layout_toEndOf="@id/img_profile"
                    android:src="@drawable/ic_camera" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                style="@style/CardLayout"
                android:layout_marginTop="@dimen/padding_large"
                android:padding="@dimen/padding_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/TextTitle"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/txt_stage_name"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/txt_email"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/txt_gender"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin"
                        android:text="@string/app_name" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/CardLayout"
                android:layout_marginTop="@dimen/padding_medium"
                android:padding="@dimen/padding_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        style="@style/TextTitle"
                        android:text="@string/txt_stats" />

                    <TextView
                        android:id="@+id/txt_member_since"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/txt_profile_visits"
                        style="@style/TextBody"
                        android:layout_marginTop="@dimen/text_margin"
                        android:text="@string/app_name" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/ll_music"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_fragment"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>