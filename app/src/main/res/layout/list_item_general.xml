<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/no_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:alpha="0.8"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/app_name"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_sad_face" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Header"
                android:text="@string/txt_no_data_found" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item_artists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@drawable/bckgrd_home_buttons"
        android:gravity="center"
        android:visibility="gone">

        <!--IMAGE-->
        <ProgressBar
            android:layout_width="@dimen/img_size_medium_large"
            android:layout_height="@dimen/img_size_medium_large" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/artist_ppic"
            android:layout_width="@dimen/img_size_medium_large"
            android:layout_height="@dimen/img_size_medium_large"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/artist_ppic"
            android:layout_toRightOf="@+id/artist_ppic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/artist_name"
                style="@style/Text_Header"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:gravity="start"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_large" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TextSmall"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="@string/txt_stage_name" />

                    <TextView
                        android:id="@+id/artist_stage_name"
                        style="@style/TextSmall"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/app_name" />

                </LinearLayout>


                <TextView
                    style="@style/TextSmall"
                    android:layout_gravity="start"
                    android:text="@string/txt_basic_information" />

                <TextView
                    android:id="@+id/artist_info"
                    style="@style/TextSmall"
                    android:layout_gravity="start"
                    android:textColor="@color/colorPrimary"
                    android:gravity="start" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_medium"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextBody"
                        android:layout_gravity="start"
                        android:text="@string/txt_since"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/artist_year_since"
                        style="@style/TextSmall"
                        android:layout_gravity="start"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_item_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@drawable/bckgrd_home_buttons"
        android:gravity="center"
        android:visibility="visible">

        <!--IMAGE-->
        <ProgressBar
            android:layout_width="@dimen/img_size_medium_large"
            android:layout_height="@dimen/img_size_medium_large" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/video_ppic"
            android:layout_width="@dimen/img_size_medium_large"
            android:layout_height="@dimen/img_size_medium_large"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/video_ppic"
            android:layout_toRightOf="@+id/video_ppic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_name"
                style="@style/Text_Header"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:gravity="start"
                android:text="@string/app_name" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/video_desc"
                    style="@style/TextSmall"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/video_url"
                    style="@style/TextBody"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>