<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/very_dark_grey_transparent"
    android:gravity="center_vertical"
    android:padding="25dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/my_account_profile_pic"
        android:layout_height="@dimen/my_account_profile_pic"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_padding"
        android:src="@drawable/main_logo_white" />

    <TextView
        android:id="@+id/messageText"
        style="@style/Text_Normal"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Loading....please wait as we are messing with your head" />

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:progressTint="@color/colorPrimary"
        android:layout_marginTop="@dimen/activity_padding"/>

</LinearLayout>