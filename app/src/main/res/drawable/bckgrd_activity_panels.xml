<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/very_dark_grey_transparent"
                android:centerColor="@color/transparent"
                android:endColor="@color/very_dark_grey_transparent"
                android:angle="270"
                />
            <stroke
                android:width="0dp"
                android:color="@color/light_grey" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>

</selector>