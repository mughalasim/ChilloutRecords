<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:textColorHighlight">@color/colorAccentHighlight</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- TAB TEXT STYLE =========================================================================-->
    <style name="TabTextLayout" parent="AppTheme">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabTextAppearance">@style/TextTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <!-- CARD STYLE =============================================================================-->
    <style name="CardLayout" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/screen_min_width</item>
        <item name="android:minWidth">@dimen/screen_min_width</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/radius_corner</item>
    </style>

    <!-- EDIT TEXT STYLES ========================================================================-->
    <style name="EditText" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/screen_min_width</item>
        <item name="android:paddingStart">@dimen/text_margin</item>
        <item name="android:paddingEnd">@dimen/text_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bckgrd_edit_text</item>
        <item name="android:textColorHint">@color/colorAccentHighlight</item>
    </style>


    <style name="EditTextLayout" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/screen_min_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_corner</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">@dimen/line_thickness</item>
        <item name="passwordToggleTint">@color/colorPrimary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="EditTextInput" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--TEXT STYLES =============================================================================-->
    <style name="TextTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/screen_min_width</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/screen_min_width</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextSmall" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/screen_min_width</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <!-- BUTTON STYLES ==========================================================================-->
    <style name="ButtonYes" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/screen_min_width</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextTitle</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/line_thickness</item>
        <item name="cornerRadius">@dimen/radius_corner</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="ButtonNo" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/screen_min_width</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextTitle</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/line_thickness</item>
        <item name="cornerRadius">@dimen/radius_corner</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

</resources>
